<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:background="@color/yellow"
    tools:context=".MainEditProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:text="Welcome :"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_pra_3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Smart Picture"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="right"
            android:text="Display Solution Delivered"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toBottomOf="@id/tv_pra_3_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraint"
        tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded_background"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBtnEditProfile_Submit"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:gravity="center_horizontal"
                android:text="Back to Home"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                android:textStyle="italic"/>

            <ImageButton
                android:id="@+id/imgBtnEditProfile_Submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/etProfile_Telp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/submit"
                tools:ignore="SpeakableTextPresentCheck"/>

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="PROFILE"
                android:textColor="@color/yellow"
                android:textSize="34sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfile"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Your Name"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etProfile_Nama"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etProfile_Alamat"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="City"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textview16"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etProfile_Kota"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Phone"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etProfile_Alamat"
                android:layout_toEndOf="@+id/textview16"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Postal Code"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etProfile_Kota"
                android:layout_toEndOf="@+id/etProfile_Kota"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Province"
                android:textAllCaps="false"
                android:textColor="@color/yellow"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/etProfile_Nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView12"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Your Real Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/etProfile_Alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Address"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/etProfile_Kota"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="City"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/etProfile_Telp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview16"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:hint="Phone"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/etProfile_Kodepos"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview16"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@id/etProfile_Telp"
                android:ems="10"
                android:hint="Postal Code"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/etProfile_Province"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="0dp"
                android:layout_toEndOf="@id/etProfile_Kota"
                android:ems="10"
                android:hint="Province"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

        </RelativeLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>